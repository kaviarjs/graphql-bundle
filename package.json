{
  "name": "@kaviar/loader",
  "version": "1.0.2",
  "description": "Loading Strategy for GraphQL Modules",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaviarjs/loader"
  },
  "scripts": {
    "clean": "rimraf dist coverage",
    "compile": "tsc",
    "pretest": "npm run compile",
    "test": "npm run testonly --",
    "watch": "tsc -w",
    "testonly": "mocha --reporter spec --full-trace ./dist/__tests__/index.js",
    "testonly-watch": "mocha  --require source-map-support/register --reporter spec --full-trace ./dist/__tests__/index.js --watch",
    "coverage": "node ./node_modules/istanbul/lib/cli.js cover -x '**/__tests__/**' _mocha -- --full-trace ./dist/__tests__/index.js",
    "postcoverage": "remap-istanbul --input coverage/coverage.raw.json --type lcovonly --output coverage/lcov.info",
    "prepublishOnly": "npm run clean && npm run compile",
    "gen-doc": "typedoc ./src --out typeDocs --tsconfig tsconfig.json"
  },
  "dependencies": {
    "@graphql-toolkit/schema-merging": "^0.10.3"
  },
  "peerDependencies": {
    "graphql": "^15.0.0"
  },
  "devDependencies": {
    "@graphql-toolkit/types": "^0.9.12",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^2.2.39",
    "@types/node": "^8.0.28",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "graphql": "^15.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^6.2.2",
    "reflect-metadata": "^0.1.13",
    "remap-istanbul": "^0.13.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.5.0",
    "sinon-chai": "^2.9.0",
    "source-map-support": "^0.5.13",
    "typedoc": "^0.15.0",
    "typescript": "^3.4.2"
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "license": "MIT"
}
